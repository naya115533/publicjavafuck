import java.util.Scanner;

class TV{
	String name;
	int channel;
	public TV(String name,int channel)
	{
		this.name = name; this.channel = channel;
	}
	float volume;
	
	public String on()
	{
		return "LG wide TV가 켜졋습니다";
	}
	public String off()
	{
		return "LG wide TV가 꺼졋습니다";
	}
	public int up()
	{
		channel +=1;
		if(channel >=21)
			channel = 1;
		return channel;
	}
	public int down()
	{
		channel -=1;
		if(channel <=0)
			channel = 20;
		return channel;
	}
}

public class 생성자2 {

	public static void main(String[] args) {
		TV t = new TV("LG wide 60inch", 8);
		Scanner sc=new Scanner(System.in);
		String in;
		while(true)
		{
			t.channel = sc.nextInt();
			t.on();//LG wide 가 켰숩니다, 현재 채널 8번
			t.off();
			t.up();
			t.down();
			System.out.println("현재 채널은 " + t.channel +"입니다");
		}
	
	
	}

}
